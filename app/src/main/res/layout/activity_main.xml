<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ztz.viewpager_fragment1120.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_main"
        android:layout_above="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ffa">
<!--android:background="@drawable/home"-->
        <RadioButton
            android:id="@+id/radio_btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:text="首页" />
        <RadioButton
            android:id="@+id/radio_btn_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/video"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="分类"/>
        <RadioButton
            android:id="@+id/radio_btn_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/shop"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="发现"/>
        <RadioButton
            android:id="@+id/radio_btn_my"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/my"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="购物车"/>
    </RadioGroup>
</RelativeLayout>
